<p id="notice"><%= notice %></p>

<h2>
  Teacher:
  <%= @teacher.name %>
</h2>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Students:</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @teacher.students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<h3>
Course:
<%= @teacher.course.name %>
</h3>


<%= link_to 'Edit', edit_teacher_path(@teacher) %> |
<%= link_to 'Back', teachers_path %>
