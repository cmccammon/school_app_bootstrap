<p id="notice"><%= notice %></p>

<h1>

  <%= @school.name %>
</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Teachers:</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <tbody>
    <% @school.teachers.each do |chicken| %>
      <tr>
        <td><%= chicken.name %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Students:</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <tbody>
    <% @school.students.each do |chicken| %>
      <tr>
        <td><%= chicken.name %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

<%= link_to 'Edit', edit_school_path(@school) %> |
<%= link_to 'Back', schools_path %>
